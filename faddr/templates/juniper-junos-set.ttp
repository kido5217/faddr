<macro>
def generate_dot_interface_name(data):
    data["name"] = data["parent_interface"] + "." + data["unit"]
</macro>

<group name="interfaces*">
set interfaces {{ parent_interface }} unit {{ unit }} description {{ description | ORPHRASE }}
set interfaces {{ parent_interface }} unit {{ unit }} vlan-id {{ s_vlan }}
</group>

<group name="interfaces*">
set interfaces {{ name }} description {{ description | ORPHRASE }}
set interfaces {{ name }} native-vlan-id {{ native_vlan }}
</group>
